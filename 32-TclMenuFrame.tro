  TstSideMenu.MenuBar.Width = 250;
  TstSideMenu.Visible = False;
  TstSideMenu.ClMenuPosition = clLeft;
  
  showBtn = MyForm.AddNewProButton(MyForm, 'showBtn', 'AÃ§');
