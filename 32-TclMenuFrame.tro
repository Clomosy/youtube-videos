var
  MyForm : TclForm;
  TstSideMenu : TclMenuFrame;
  showBtn, hideBtn : TclProButton;

void ShowMenuFrame;
{
  TstSideMenu.Visible = True;
  clRTMethod(TstSideMenu, 'BringToFront');
}

void HideMenuFrame;
{
  TstSideMenu.Visible = False;
  clRTMethod(showBtn, 'BringToFront');
}

{
